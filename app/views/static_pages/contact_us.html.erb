<% provide(:title, @text) %>

<h1 id="unit" class= "text-center" ><%= @text %></h1>

<div class = "container-fluid boite ">
  <div class = "jumbotron">
    
   <div class="row">

   <div class="col-md-2"></div>


    <div class="col-md-8">
    <%= form_tag("/contact_us", method: "post") do %>
    <!--  <%= label_tag(:name, "Search for:") %> -->
      <div class="form-group">
         <%= text_field_tag :name ,"", class: "form-control", placeholder: "Enter your name" %>
      </div>
      <div class="form-group">
         <%= text_field_tag :email ,"", class: "form-control",placeholder: "Enter your email" %>
      </div>
      <div class="form-group">
         <%= text_area_tag :message ,"", class: "form-control", placeholder: "Enter your message..." %>
      </div>
      <%= submit_tag "Submit" , class: "btn btn-primary btn-block" %>
     <% end %>
     </div>


     <div class="col-md-2"></div>
  
   </div>

 </div>

</div>
